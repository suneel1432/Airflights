@model TripViewModel

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/site.css" rel="stylesheet" />
<div class="row col-md-10">
    <div class="col">
        <h2>List of Trips</h2>
    </div>
    <div class="col">
        <div class="search-box">
            <form method="get">
                <input type="text" name="search" placeholder="Search" value="@Model.Search" />
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </form>
        </div>
    </div>
    <div class="col">
        <a asp-action="Create" class="btn btn-warning btn-sm createBtn">Create Trip</a>
    </div>
   
</div>
<br />
<table style="width:70%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Destination</th>
            <th>PlaneType</th>
            <th>TripsNo</th>
            <th>Staff</th>
            <th>TripsCount</th>
            <th>SeatCount</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Trip e in Model.Trips)
        {
            <tr>
                <td>@e.ID</td>
                <td>@e.Destination</td>
                <td>@e.PlaneType</td>
                <td>@e.TripsNo</td>
                <td>@e.Staff</td>
                <td>@e.TripsCount</td>
                <td>@e.SeatCount</td>
                <td>
                    <a asp-action="Update" asp-route-ID="@e.ID">Update</a>
                </td>
                <td>
                    <form asp-route-ID="@e.ID" asp-action="Delete" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
